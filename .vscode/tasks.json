{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Make: build",
      "type": "shell",
      "command": "make",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Make: run",
      "type": "shell",
      "command": "make run",
      "dependsOn": "Make: build",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Make: clean",
      "type": "shell",
      "command": "make clean",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}